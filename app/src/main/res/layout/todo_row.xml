<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="55dp" android:paddingBottom="5dp">
    <CheckBox
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/checkBox" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Todo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/todo_item" app:layout_constraintStart_toEndOf="@+id/checkBox"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
    <TextView
            android:text="Due Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todo_date" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Label"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/todo_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>